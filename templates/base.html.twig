<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{% block title %}Gestion Patrimoine{% endblock %}</title>

    {# Bootstrap 5 CSS (CDN) #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="" crossorigin="anonymous">

    {# Votre CSS personnalisé (optionnel) #}
    <link rel="stylesheet" href="{{ asset('build/app.7e963500.css') }}">

    {% block styles %}{% endblock %}
</head>
<body class="bg-light">

<nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
  <div class="container">
    <a class="navbar-brand" href="{{ path('app_home') ?? path('app_greffe') }}">Gestion Patrimoine</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="mainNav">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item"><a class="nav-link" href="{{ path('app_greffe') }}">Greffes</a></li>
      </ul>

      <div class="d-flex align-items-center">
        {% if app.user %}
          <div class="me-3 text-white text-end">
            <div class="fw-bold">{{ app.user.nom|default(app.user.username|default('Utilisateur')) }}{% if app.user.prenom is defined and app.user.prenom %} {{ app.user.prenom }}{% endif %}</div>
            <div class="small">{{ app.user.email|default('—') }}</div>
          </div>
          <a class="btn btn-outline-light btn-sm" href="{{ path('app_logout') }}">Se déconnecter</a>
        {% else %}
          <a class="btn btn-outline-light btn-sm" href="{{ path('app_login') }}">Se connecter</a>
        {% endif %}
      </div>
    </div>
  </div>
</nav>

<main class="container my-4">
  {% block body %}{% endblock %}
</main>

{# Bootstrap JS bundle (Popper inclus) #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="" crossorigin="anonymous"></script>

{% block scripts %}{% endblock %}
</body>
</html>
